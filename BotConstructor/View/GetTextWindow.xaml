<Window x:Class="BotConstructor.View.GetTextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BotConstructor.View"
        mc:Ignorable="d"
        Title="Введите текст" Height="120" Width="200" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBox x:Name="txtValue" Margin="10" TextWrapping="NoWrap"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Ок" Width="50" Margin="5" Click="Button_OkClick"></Button>
                <Button Content="Отмена" Width="50" Margin="5" Click="Button_CancelClick"></Button>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
